<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.credit.mapper.DebitPlanMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.credit.pojo.DebitPlan">
        <id column="plan_id" property="planId" />
        <result column="plan_title" property="planTitle" />
        <result column="plan_desc" property="planDesc" />
        <result column="freeze_amount" property="freezeAmount" />
        <result column="interest_rate" property="interestRate" />
        <result column="duration_month" property="durationMonth" />
        <result column="duration_year" property="durationYear" />
        <result column="start_date" property="startDate" />
        <result column="expire_date" property="expireDate" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        plan_id, plan_title, plan_desc, freeze_amount, interest_rate, duration_month, duration_year, start_date, expire_date
    </sql>

</mapper>
