<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.credit.mapper.TransactionRecordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.credit.pojo.TransactionRecord">
        <id column="transaction_id" property="transactionId" />
        <result column="encoded_transaction" property="encodedTransaction" />
        <result column="transaction_date" property="transactionDate" />
        <result column="transaction_type" property="transactionType" />
        <result column="transaction_result" property="transactionResult" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        transaction_id, encoded_transaction, transaction_date, transaction_type, transaction_result
    </sql>

</mapper>
