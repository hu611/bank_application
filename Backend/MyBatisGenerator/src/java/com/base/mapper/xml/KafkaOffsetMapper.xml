<mapper namespace="com.base.mapper.KafkaOffsetMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.base.pojo.KafkaOffset">
        <id column="partition_id" property="partitionId" />
